import java.security.AllPermission;
import java.util.ArrayList;
import java.util.Scanner;

public class CollectArray {

	
public static void main(String[] args) {
		
		ArrayList<Student> st = new ArrayList<>();
		int count = 1;
		while(true) {	
			
			Scanner sc = new Scanner(System.in);
			
			System.out.println("Enter Details of student " + count++);
			
			System.out.println("Enter roll ");
			int roll  = sc.nextInt();
			
			System.out.println("Enter name ");
			String name = sc.next();
			
			System.out.println("Enter marks ");
			int marks  = sc.nextInt();
			
			Student student = new Student(roll,name,marks);		
			st.add(student);
			
			
			System.out.println("want to add more students details (y/n)");
			String choice = sc.next();
			
			
			if(choice.equals("n")) {
				break;
			}
			
			
			
			
			
		}
		
	
		System.out.println("Students details are : ");
		System.out.println("=============");
		
		for(Student students :  st) {
			System.out.println(students.getRollNumber());
			System.out.println(students.getMarks());
			System.out.println(students.getName());
			System.out.println("--------------");
			
		}

		
		
		
		
	}

}
